<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.estatisticasdobrasileirao"
    android:versionCode="9"
    android:versionName="2.2" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:anyDensity="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <compatible-screens>

        <!-- all small size screens -->
        <screen
            android:screenDensity="ldpi"
            android:screenSize="small" />
        <screen
            android:screenDensity="mdpi"
            android:screenSize="small" />
        <screen
            android:screenDensity="hdpi"
            android:screenSize="small" />
        <screen
            android:screenDensity="xhdpi"
            android:screenSize="small" />
        <screen
            android:screenDensity="480"
            android:screenSize="small" />
        <!-- all normal size screens -->
        <screen
            android:screenDensity="ldpi"
            android:screenSize="normal" />
        <screen
            android:screenDensity="mdpi"
            android:screenSize="normal" />
        <screen
            android:screenDensity="hdpi"
            android:screenSize="normal" />
        <screen
            android:screenDensity="xhdpi"
            android:screenSize="normal" />
        <screen
            android:screenDensity="480"
            android:screenSize="normal" />
    </compatible-screens>

    <application
        android:allowBackup="true"
        android:icon="@drawable/biblia"
        android:label="@string/app_name"
        android:logo="@drawable/biblia"
        android:theme="@style/Theme.Sherlock" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="br.com.estatisticasdobrasileirao.activity.FavoriteTeamActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.estatisticasdobrasileirao.activity.RoundMatchesTabActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.estatisticasdobrasileirao.activity.StatisticsPerYearActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.estatisticasdobrasileirao.activity.statistics.ResultStatisticsPerYearActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.estatisticasdobrasileirao.activity.statistics.DetailedResultsStatisticsPerYearActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.estatisticasdobrasileirao.classification.ClassificationActivity"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="br.com.estatisticasdobrasileirao.activity.loterias.LotecaActivity"
            android:screenOrientation="portrait" />
        
          <activity
            android:name="br.com.estatisticasdobrasileirao.activity.loterias.LotogolActivity"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="br.com.estatisticasdobrasileirao.activity.LoteriasActivity"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="br.com.estatisticasdobrasileirao.activity.loterias.LotecaMatchesFragment"
            android:screenOrientation="portrait" />
        
         <activity
            android:name="br.com.estatisticasdobrasileirao.activity.loterias.LotogolMatchesFragment"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        
        <activity
            android:name="br.com.estatisticasdobrasileirao.datacrossing.DataCrossingActivity"
            android:screenOrientation="portrait" />
       
    </application>

</manifest>